/* pages/zhinan/zhinan.wxss */
.container {
  padding: 10px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.title {
  font-size: 30px;
  font-weight: bold;
}

.header-image {
  width: 70px;
  height: 70px;
}

.content {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
}

.question {
  margin-bottom: 10px;
}

.question-text{
  font-size: 20px;
  font-family: "楷体";
  font-weight: 700;
}
.answer-text {
  font-size: 16px;
  font-weight: 400;
}
