.container {
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  display: block;
  font-size: 16px;
  margin-bottom: 5px;
}

.input {
  width: 100%;
  height: 40px; /* 设置 input 框的高度 */
  line-height: 40px; /* 设置 line-height 与高度相同 */
  box-sizing: border-box; /* 确保 padding 包含在高度内 */
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 10px;
  font-size: 20px;
  padding-left: 10px;
}

.button {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: white;
  text-align: center;
  border: none;
  border-radius: 5px;
}