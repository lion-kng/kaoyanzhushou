.container {
  padding: 10px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.title {
  font-size: 30px;
  font-weight: bold;
}

.header-image {
  width: 70px;
  height: 70px;
}

.content {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
}

.event-text{
  font-size: 20px;
}

.address-text{
  color:#72D1F1;
  font-size: 16px;
}

.time-text{
  font-size: 16px;
  color: #888888;
}