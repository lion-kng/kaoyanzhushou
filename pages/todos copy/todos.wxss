.header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #e0e0e0;
  padding: 20rpx;
  width: 94%;
  height: 90rpx;
  background-color: #ffffff;
  text-align: center;
  margin-left: 3%;
}

.back_container {
  height: 100%;
  background-color: #ededed;
}

.todo_container {
  height: 100%;
  background-color: #ededed;
  padding: 20px;
}

.header .plus {
  width: 30px;
  height: 30px;
  margin-left: 10px;
  margin-right: 10rpx;
}

.header .new-todo {
  flex: 1;
  font-size: 28rpx;
  margin-left: 5%;
  margin-right: 5%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.new-todo {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.picker {
  margin-left: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.plus {
  width: 30px;
  height: 30px;
  margin-left: 10px;
}

.section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.todos {
  border-radius: 10rpx;
  margin-top: 10rpx;
  width: 94%;
  margin-left: 3%;
  border-top: 1px solid #ccc;
  padding-top: 10px;
}

.todos .item {
  display: flex;
  height: 120rpx;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
  background-color: #6f879f;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  background-image: url("https://s3.ax1x.com/2021/03/17/6cxSER.jpg");
  background-size: 110%;
  background-repeat: no-repeat;
}

.todos .item:last-child {
  border-bottom: 0;
}

.todos .item .checkbox {
  margin-right: 10px;
}

.todos .item .name {
  flex: 1;
  font-size: 30rpx;
  color: #ffffff;
}

.todos .item.completed {
  background-color: #d5d5d5;
  background-image: none;
}

.todos .item.completed .name {
  text-decoration: line-through;
  color: #888;
}

.item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
}

.item.completed .todo-text {
  text-decoration: line-through;
  color: #ccc;
}

.checkbox {
  margin-right: 10px;
}

.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10px;
  border-top: 1px solid #ccc;
  margin: 10rpx 0 30rpx 0;
  padding: 0 5rpx;
  font-size: 30rpx;
  color: #576b95;
}

.footer .btn {
  text-align: center;
  color: #c4c4c4;
  font-size: 32rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 30px;
  height: 30px;
}

.footer .foottext {
  color: #8a8a8a;
  font-size: 30rpx;
  margin: 0 3%;
  flex: 1;
  text-align: center;
}

.btn {
  width: 30px;
  height: 30px;
}

.foottext {
  flex: 1;
  text-align: center;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #c4c4c4;
  text-align: center;
}
