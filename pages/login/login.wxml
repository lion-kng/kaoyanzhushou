<view class="container">
    <image class="icon" src="/image/login.webp" mode="aspectFit" />
    <input class="input" type="text" placeholder="{{usernamePlaceholder}}" bindinput="bindUsernameInput" bindfocus="handleFocus" bindblur="handleBlur" data-field="username" />
    <input class="input" type="password" placeholder="{{passwordPlaceholder}}" bindinput="bindPasswordInput" bindfocus="handleFocus" bindblur="handleBlur" data-field="password" />
    <button class="button" bindtap="login" style="position: relative; left: 0rpx; top: 1rpx">登录</button>
    <button class="button" bindtap="goToRegister" style="position: relative; left: 0rpx; top: 47rpx">注册</button>
</view>